rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Pledges collection
    match /pledges/{pledgeId} {
      // Anyone can create a pledge (public form)
      allow create: if true;

      // Only read public pledges or by authenticated admin
      allow read: if resource.data.isPublic == true;

      // No updates or deletes from client
      allow update, delete: if false;
    }

    // Stats collection (for aggregate counts)
    match /stats/{statId} {
      allow read: if true;
      allow write: if false; // Only server-side updates
    }
  }
}
